{{#*inline "page"}}

<header class="mt3 mt2-ns mb4 mb5-ns tc tl-ns">
  <div class="w-100 mw-none ph3 mw8-m mw9-l center f3">
    <h1>{{fluent sponsors-page-title}}</h1>
  </div>
</header>

<section class="white">
  <div class="w-100 mw-none ph3 mw8-m mw9-l center f3">

    <p>
      {{fluent sponsors-description}}
    </p>

    <p>
      {{fluent sponsors-caveat}}
    </p>

    <div class="flex-none flex-l mt5-l">
      <div class="w-100 w-30-l tc">
        <img alt="{{fluent sponsors-microsoft-alt}}" src="/static/images/sponsor-logos/microsoft.png" />
      </div>
      <div class="w-100 w-70-l">
        <h3>Microsoft Azure</h3>
        <p>
          {{fluent sponsors-microsoft}}
        </p>
      </div>
    </div>

    <hr noshade size="1"/>

    <div class="flex-none flex-l mt5-l">
      <div class="w-100 w-30-l tc">
        <img alt="{{fluent sponsors-aws-alt}}" src="/static/images/sponsor-logos/aws.png" />
      </div>
      <div class="w-100 w-70-l">
        <h3>AWS</h3>
        <p>
          {{fluent sponsors-aws}}
        </p>
      </div>
    </div>

    <hr noshade size="1"/>

    <div class="flex-none flex-l mt5-l">
      <div class="w-100 w-30-l tc">
        <img alt="{{fluent sponsors-mozilla-alt}}" src="/static/images/sponsor-logos/mozilla.png" />
      </div>
      <div class="w-100 w-70-l">
        <h3>Mozilla</h3>
        <p>
          {{fluent sponsors-mozilla}}
        </p>
      </div>
    </div>

  </div>
</section>

<section class="purple">
  <div class="w-100 mw-none ph3 mw8-m mw9-l center f3 flex-l">
    <div class="w-50-l mr4-l" id="supporting-rust">
      <header>
        <h2>{{fluent sponsors-support}}</h2>
        <div class="highlight"></div>
      </header>
      <p>{{fluent sponsors-sponsor}}</p>
      <a href="mailto:core@rust-lang.org" class="button button-secondary">{{fluent sponsors-contact-core}}</a>
    </div>
  </div>
</section>

{{/inline}}
{{~> (parent)~}}
